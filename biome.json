{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 140,
        "includes": ["**", "!**/test_vault", "!**/build"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single"
        },
        "globals": ["__DEV__"]
    },
    "linter": {
        "enabled": true,
        "includes": ["**", "!**/node_modules"],
        "rules": {
            "complexity": {
                "noUselessFragments": "off"
            },
            "style": {
                "useSingleVarDeclarator": "off",
                "noParameterAssign": "off",
                "noNonNullAssertion": "off",
                "useNamingConvention": {
                    "options": {
                        "strictCase": false
                    }
                },
                "useFilenamingConvention": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noConsole": {
                    "options": {
                        "allow": ["debug", "info", "error"]
                    }
                }
            },
            "nursery": {}
        }
    },
    "overrides": [
        {
            "includes": ["**/*.svelte"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off"
                    },
                    "correctness": {
                        "noUnusedImports": "off",
                        "noUnusedVariables": "off",
                        "noUndeclaredVariables": "off"
                    }
                }
            }
        },
        {
            "includes": ["**/*.css"],
            "linter": {
                "enabled": false
            }
        }
    ]
}
